// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  role         Role
  createdAt    DateTime @default(now())

  jobSeeker JobSeeker?
  company   Company?
}

enum Role {
  JOB_SEEKER
  COMPANY
}

model JobSeeker {
  id                Int     @id @default(autoincrement())
  userId            String  @unique
  fullName          String
  portfolioUrl      String?
  experienceSummary String?

  user User @relation(fields: [userId], references: [id])
}

model Company {
  id          Int     @id @default(autoincrement())
  userId      String  @unique
  companyName String
  websiteUrl  String?
  description String?

  user    User      @relation(fields: [userId], references: [id])
  Vacancy Vacancy[]
}

model Vacancy {
  id             Int      @id @default(autoincrement())
  companyId      Int
  title          String
  salaryRange    String?
  role           String
  jobDescription String
  createdAt      DateTime @default(now())

  company Company @relation(fields: [companyId], references: [id])
}
