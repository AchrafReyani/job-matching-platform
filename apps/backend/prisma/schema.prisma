datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                      String   @id @default(uuid())
  email                   String   @unique
  passwordHash            String
  role                    Role
  createdAt               DateTime @default(now())
  notificationPreferences Json     @default("{}")

  jobSeeker     JobSeeker?
  company       Company?
  messages      Message[]
  notifications Notification[]
  newsRead      NewsRead[]
}

enum Role {
  JOB_SEEKER
  COMPANY
  ADMIN
}

model JobSeeker {
  id                Int     @id @default(autoincrement())
  userId            String  @unique
  fullName          String
  portfolioUrl      String?
  experienceSummary String?

  user         User         @relation(fields: [userId], references: [id])
  applications Application[]
}

model Company {
  id          Int     @id @default(autoincrement())
  userId      String  @unique
  companyName String
  websiteUrl  String?
  description String?

  user     User      @relation(fields: [userId], references: [id])
  Vacancy  Vacancy[]
}

model Vacancy {
  id             Int      @id @default(autoincrement())
  companyId      Int
  title          String
  salaryRange    String?
  role           String
  jobDescription String
  createdAt      DateTime @default(now())

  company      Company      @relation(fields: [companyId], references: [id])
  applications Application[]

  // Enterprise: prevent cross-company deletes
  @@unique([id, companyId])
}

model Application {
  id           Int        @id @default(autoincrement())
  vacancyId    Int
  jobSeekerId  Int
  status       ApplicationStatus @default(APPLIED)
  appliedAt    DateTime   @default(now())

  // Cascade delete all Applications when Vacancy is deleted
  vacancy   Vacancy   @relation(fields: [vacancyId], references: [id], onDelete: Cascade)

  jobSeeker JobSeeker @relation(fields: [jobSeekerId], references: [id])

  // Application â†’ Message cascade
  messages  Message[]
}

enum ApplicationStatus {
  APPLIED
  ACCEPTED
  REJECTED
}

model Message {
  id            Int       @id @default(autoincrement())
  applicationId Int
  senderId      String
  messageText   String
  sentAt        DateTime  @default(now())
  readAt        DateTime?

  // Cascade delete messages if application deleted
  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  sender      User        @relation(fields: [senderId], references: [id])
}

model Notification {
  id          Int              @id @default(autoincrement())
  userId      String
  type        NotificationType
  title       String
  message     String
  relatedId   Int?
  isRead      Boolean          @default(false)
  createdAt   DateTime         @default(now())

  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum NotificationType {
  APPLICATION_ACCEPTED
  APPLICATION_REJECTED
  NEW_MESSAGE
  NEW_APPLICATION
  APPLICATION_WITHDRAWN
  MATCH_ENDED
}

model ArchivedUser {
  id          Int      @id @default(autoincrement())
  originalId  String
  email       String
  role        String
  profileData Json
  archivedAt  DateTime @default(now())
  archivedBy  String
}

model ArchivedVacancy {
  id               Int      @id @default(autoincrement())
  originalId       Int
  companyName      String
  title            String
  salaryRange      String?
  role             String
  jobDescription   String
  applicationCount Int
  archivedAt       DateTime @default(now())
  archivedBy       String
}

model ArchivedApplication {
  id           Int      @id @default(autoincrement())
  originalId   Int
  vacancyTitle String
  seekerName   String
  status       String
  messageCount Int
  archivedAt   DateTime @default(now())
  archivedBy   String
}

model ArchivedMatch {
  id                Int      @id @default(autoincrement())
  applicationId     Int
  vacancyId         Int
  vacancyTitle      String
  jobSeekerId       Int
  jobSeekerName     String
  companyId         Int
  companyName       String
  applicationStatus String
  appliedAt         DateTime
  messages          Json
  messageCount      Int
  deletedBy         String
  deletedByRole     String
  archivedAt        DateTime @default(now())
}

// News Feature
enum NewsCategory {
  RELEASE
  BUG_FIX
  ANNOUNCEMENT
  MAINTENANCE
  FEATURE_UPDATE
  SECURITY
  TIPS_AND_TRICKS
  EVENT
}

enum NewsStatus {
  DRAFT
  PUBLISHED
  SCHEDULED
}

enum NewsAudience {
  ALL
  JOB_SEEKER
  COMPANY
}

model News {
  id          Int           @id @default(autoincrement())
  title       String
  content     String
  category    NewsCategory
  status      NewsStatus    @default(DRAFT)
  audience    NewsAudience  @default(ALL)
  isPinned    Boolean       @default(false)
  scheduledAt DateTime?
  publishedAt DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  readBy      NewsRead[]
}

model NewsRead {
  id        Int      @id @default(autoincrement())
  newsId    Int
  userId    String
  readAt    DateTime @default(now())

  news      News     @relation(fields: [newsId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([newsId, userId])
}
