datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  role         Role
  createdAt    DateTime @default(now())

  jobSeeker JobSeeker?
  company   Company?
  messages  Message[]
}

enum Role {
  JOB_SEEKER
  COMPANY
}

model JobSeeker {
  id                Int     @id @default(autoincrement())
  userId            String  @unique
  fullName          String
  portfolioUrl      String?
  experienceSummary String?

  user         User         @relation(fields: [userId], references: [id])
  applications Application[]
}

model Company {
  id          Int     @id @default(autoincrement())
  userId      String  @unique
  companyName String
  websiteUrl  String?
  description String?

  user     User      @relation(fields: [userId], references: [id])
  Vacancy  Vacancy[]
}

model Vacancy {
  id             Int      @id @default(autoincrement())
  companyId      Int
  title          String
  salaryRange    String?
  role           String
  jobDescription String
  createdAt      DateTime @default(now())

  company      Company      @relation(fields: [companyId], references: [id])
  applications Application[]

  // Enterprise: prevent cross-company deletes
  @@unique([id, companyId])
}

model Application {
  id           Int        @id @default(autoincrement())
  vacancyId    Int
  jobSeekerId  Int
  status       ApplicationStatus @default(APPLIED)
  appliedAt    DateTime   @default(now())

  // Cascade delete all Applications when Vacancy is deleted
  vacancy   Vacancy   @relation(fields: [vacancyId], references: [id], onDelete: Cascade)

  jobSeeker JobSeeker @relation(fields: [jobSeekerId], references: [id])

  // Application â†’ Message cascade
  messages  Message[]
}

enum ApplicationStatus {
  APPLIED
  ACCEPTED
  REJECTED
}

model Message {
  id            Int      @id @default(autoincrement())
  applicationId Int
  senderId      String
  messageText   String
  sentAt        DateTime @default(now())

  // Cascade delete messages if application deleted
  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  sender      User        @relation(fields: [senderId], references: [id])
}
